              "raw": "{\n  \"packageId\": 1,\n  \"slotId\": 1,\n  \"totalAmount\": 5000.00,\n  \"paidAmount\": 1000.00,\n  \"pendingAmount\": 4000.00,\n  \"specialInstructions\": \"Group booking for family vacation\",\n  \"concernPersons\": [\n    {\n      \"name\": \"John Doe\",\n      \"email\": \"john@example.com\",\n      \"phone\": \"+1234567890\",\n      \"address\": \"123 Main St, City, Country\"\n    }\n  ],\n  \"passengers\": [\n    {\n      \"email\": \"john@example.com\",\n      \"phone\": \"+1234567890\",\n      \"type\": \"adult\",\n      \"firstName\": \"John\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"1985-01-15\",\n      \"gender\": \"male\",\n      \"passportNumber\": \"A12345678\",\n      \"tShirtSize\": \"L\",\n      \"foodRestrictions\": \"Vegetarian\",\n      \"pickupPoint\": \"Hotel ABC\",\n      \"fareAmount\": 2500.00\n    },\n    {\n      \"email\": \"jane@example.com\",\n      \"phone\": \"+1234567891\",\n      \"type\": \"adult\",\n      \"firstName\": \"Jane\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"1987-05-20\",\n      \"gender\": \"female\",\n      \"passportNumber\": \"B87654321\",\n      \"tShirtSize\": \"M\",\n      \"pickupPoint\": \"Hotel ABC\",\n      \"fareAmount\": 2500.00\n    }\n  ],\n  \"addons\": [\n    {\n      \"type\": \"meal\",\n      \"name\": \"Lunch Package\",\n      \"description\": \"Special lunch for 2 people\",\n      \"price\": 50.00,\n      \"quantity\": 2,\n      \"totalAmount\": 100.00\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"]
            }
          }
